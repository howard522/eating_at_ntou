{
  "compilerOptions": {
    "types": [
      "@types/node",
      "nuxt/schema"
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@server/*": ["./server/*"],
      "@stores/*": ["./stores/*"]
    },
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext"
  },
  "include": [
    "nuxt.config.ts",
    "**/*.ts",
    "**/*.vue",
    ".nuxt/**/*.ts"
  ],
  "extends": "./.nuxt/tsconfig.json"
}
